<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AvanadeStudioTV.Views.FullScreenListPage" BackgroundImage="StudioFlatBackground.png">
    <ContentPage.Content>
        <AbsoluteLayout  x:Name="MainLayout" >
            <Grid   x:Name = "MainGrid" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*" />
                    <RowDefinition Height="25*" />
                    <RowDefinition Height="15*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="55*" />
                    <ColumnDefinition Width="42*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Text="Close" TextColor="White"  Clicked="CloseButton_Clicked"></Button>
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>